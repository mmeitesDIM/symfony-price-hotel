{% extends 'base.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}
    <h1>Property index</h1>

    <div class="card-deck col-sm-4">
        {% for property in properties %}

            <div class="card">
                <img class="card-img-top" src="{{ asset('papetries.jpg') }}">
                <div class="card-body">
                    <h5 class="card-title">{{ property.name }}</h5>
                    <p class="card-text"></p>
                </div>
            </div>
        {% else %}
        {% endfor %}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>PostalCode</th>
            <th>City</th>
            <th>Country</th>
            <th>Surface</th>
            <th>BedNumber</th>
            <th>AvgRated</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.id }}</td>
                <td>{{ property.name }}</td>
                <td>{{ property.address }}</td>
                <td>{{ property.postalCode }}</td>
                <td>{{ property.city }}</td>
                <td>{{ property.country }}</td>
                <td>{{ property.surface }}</td>
                <td>{{ property.bedNumber }}</td>
                <td>{{ property.avgRated }}</td>
                <td>
                    <a href="{{ path('property_show', {'id': property.id}) }}">show</a>
                    <a href="{{ path('property_edit', {'id': property.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('property_new') }}">Create new</a>
{% endblock %}
